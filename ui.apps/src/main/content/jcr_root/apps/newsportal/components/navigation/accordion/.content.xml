<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/accordion">
    <items jcr:primaryType="nt:unstructured">
        <accordioncontainer
            jcr:primaryType="nt:unstructured"
            jcr:title="Select Media Type"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <general
                    jcr:primaryType="nt:unstructured"
                    jcr:title="General"
                    sling:resourceType="granite/ui/components/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <mediaList
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            class="cq-dialog-dropdown-showhide select-media-type"
                            cq-dialog-dropdown-showhide-target=".test-options-showhide-target"
                            name="./selectMediaType">
                            <items jcr:primaryType="nt:unstructured">
                                <image
                                    jcr:primaryType="nt:unstructured"
                                    text="Image"
                                    value="image"/>
                                <video
                                    jcr:primaryType="nt:unstructured"
                                    text="Video"
                                    value="video"/>
                            </items>
                        </mediaList>
                    </items>
                </general>
                <media
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Media"
                    sling:resourceType="granite/ui/components/foundation/container"
                    margin="{Boolean}true">
                    <items jcr:primaryType="nt:unstructured">
                        <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <image
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    class="hide media-type-toggle"
                                    showhidetargetvalue="image">
                                    <items jcr:primaryType="nt:unstructured">
                                        <imageFields
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            class="media-type-toggle cq-dialog-dropdown-showhide-target"
                                            data-showhidetargetvalue="image">
                                            <items jcr:primaryType="nt:unstructured">
                                                <imageSrc
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Browse and select an image from the DAM."
                                                    fieldLabel="Image Path"
                                                    name="./imagePath"
                                                    rootPath="/content/dam"/>
                                                <imageAltText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter alt text for the image to support accessibility."
                                                    fieldLabel="Image Alt Text"
                                                    name="./imageAltText"/>
                                                <title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the title text for the media card."
                                                    fieldLabel="Image Title"
                                                    name="./ImageTitle"/>
                                                <description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Enter a short description for the media card."
                                                    fieldLabel="ImageDescription"
                                                    name="./ImageDescription"/>
                                                <buttonText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the label for the card's CTA button."
                                                    fieldLabel="Button Text"
                                                    name="./button"/>
                                                <buttonLink
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Provide a path or URL for the CTA button."
                                                    fieldLabel="Button Link"
                                                    name="./buttonLink"/>
                                                <open-new-tab
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    checked="${true}"
                                                    fieldDescription="Check to open the link in a new browser tab."
                                                    name="./openInNewTab"
                                                    text="Open New Tab"
                                                    uncheckedValue="false"
                                                    value="{Boolean}true"/>
                                            </items>
                                        </imageFields>
                                    </items>
                                </image>
                                <video
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container"
                                    class="hide media-type-toggle"
                                    showhidetargetvalue="video">
                                    <items jcr:primaryType="nt:unstructured">
                                        <videoFields
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            class="media-type-toggle cq-dialog-dropdown-showhide-target"
                                            data-showhidetargetvalue="video">
                                            <items jcr:primaryType="nt:unstructured">
                                                <videoSrc
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Provide a thumbnail image path for the video."
                                                    fieldLabel="Video Thumbnail Path"
                                                    name="./videoThumbnailPath"/>
                                                <videoSrcType
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Specify the video type (e.g., mp4, YouTube)."
                                                    fieldLabel="Video Type"
                                                    name="./videoType"/>
                                                <title
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the title text for the media card."
                                                    fieldLabel="Vedio Title"
                                                    name="./vedioTitle"/>
                                                <description
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldDescription="Enter a short description for the media card."
                                                    fieldLabel="Vedio Description"
                                                    name="./vedioDescription"/>
                                                <buttonText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the label for the card's CTA button."
                                                    fieldLabel="Button Text"
                                                    name="./button"/>
                                                <buttonLink
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Provide a path or URL for the CTA button."
                                                    fieldLabel="Button Link"
                                                    name="./buttonLink"/>
                                                <open-new-tab
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    checked="${true}"
                                                    fieldDescription="Check to open the link in a new browser tab."
                                                    name="./openInNewTab"
                                                    text="Open New Tab"
                                                    uncheckedValue="false"
                                                    value="{Boolean}true"/>
                                            </items>
                                        </videoFields>
                                    </items>
                                </video>
                            </items>
                        </column>
                    </items>
                </media>
            </items>
        </accordioncontainer>
    </items>
</jcr:root>
